    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 9999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Rufina', serif;
            font-size: 24px;
            font-style: italic;
            align-content: center;
        }

        .modal-content {
            background-color: #fefefe;
            padding: 20px;
            border: 1px solid #888;
            width: 40%;
            font-family: 'Rufina', serif;
            font-style: italic;
            max-width: 600px;
        }

        .close-button {
            background-color: rgba(19, 48, 0, 0.9);
            color: white;
            padding: 10px 20px;
            border: none;
            text-align: center;
            text-decoration: none;
            display: inline-block;
