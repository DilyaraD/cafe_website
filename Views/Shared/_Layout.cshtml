        @RenderBody()
    </div>
    <footer>
        <div class="foot__p">
            <p>Trattoria</p>
        </div>
    </footer>
    <script>
        $("#Reserv").click(function () {
            $("#reservationPopup").fadeIn();
        });

        $("#reservationPopup").click(function (event) {
            if (event.target === this) {
                $(this).fadeOut();
            }
        });</script>
